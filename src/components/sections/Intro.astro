---
import bios from "../../data/bio.json";
import socials from "../../data/socials.json";
import LinkButton from "../utils/LinkButton.astro";
import UserImage from "../utils/UserImage.astro";
---

<div class="ui two column stackable grid container">
    <div class="center aligned column image-column">
        <UserImage />
    </div>
    <div class="left aligned column">
        <h1>Melina O'Dell</h1>
        {bios["bios"].map((bio) => <p>{bio}</p>)}
        <br />
        <div class="ui center aligned container">
            <div class="ui small stackable buttons">
                <a
                    class="ui envelope button"
                    id="email-button"
                    data-tooltip="Copy melodell@umich.edu to clipboard"
                >
                    <i class="envelope icon"></i>
                    Email
                </a>
                <LinkButton
                    className="linkedin"
                    href={socials["linkedin"]}
                    label="LinkedIn"
                    tooltip="Visit my LinkedIn"
                />
                <LinkButton
                    className="github black"
                    href={socials["github"]}
                    label="GitHub"
                    tooltip="Visit my GitHub"
                />
            </div>
        </div>
    </div>
</div>

<script is:inline define:vars={{ socials }}>
    // @ts-nocheck
    // Copy email to clipboard on click
    const email = socials["email"]["umich"];
    const emailButton = document.getElementById("email-button");
    const copyText = (text) => {
        navigator.clipboard.writeText(text);
    };
    emailButton.addEventListener("click", () => copyText(email));
</script>

<style>
    .image-column {
        display: flex !important;
        justify-content: center;
        align-items: center;
    }
</style>
