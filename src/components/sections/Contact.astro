---
import socials from "../../data/socials.json";

interface Props {
    id: string;
}

const { id }: Props = Astro.props;

const umichEmail = socials["email"]["umich"];
const personalEmail = socials["email"]["personal"];

const updatedYear = 2024;
---

<footer id={id} class="footer container">
    <h2>Contact Me</h2>
    <div class="ui two column stackable grid footer-grid">
        <div class="column">
            <div class="ui list">
                <div>
                    <i class="graduation cap icon"></i>
                    <a href=`mailto: ${umichEmail}`>{umichEmail}</a>
                </div>
                <div>
                    <i class="envelope icon"></i>
                    <a href=`mailto: ${personalEmail}`>
                        {personalEmail}
                    </a>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="ui list">
                <div>
                    <i class="linkedin icon"></i>
                    <a href={socials["linkedin"]} target="_blank">
                        Melina O'Dell on LinkedIn
                    </a>
                </div>
                <div>
                    <i class="github icon"></i>
                    <a href={socials["github"]} target="_blank">
                        melodell on GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
    <span>Updated {updatedYear}</span>
</footer>

<style>
    .footer {
        padding-bottom: 20px;
    }

    .footer-grid {
        padding: 10px 0 30px !important;
    }
</style>
